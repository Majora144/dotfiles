[manager]
ratio = [1, 3, 4]
sort_by = "natural"
sort_sensitive = false
sort_reverse = false
sort_dir_first = true
linemode = "size"
show_hidden = false
show_symlink = true

[preview]
tab_size = 2
max_width = 1000
max_height = 1000
image_filter = "triangle"
image_quality = 75
sixel_fraction = 15

[opener]
edit = [
    { run = '$EDITOR "$@"', block = true, for = "unix" }
]
open = [
    { run = 'xdg-open "$@"', desc = "Open" }
]
reveal = [
    { run = 'thunar "$(dirname "$0")"', desc = "Reveal in Thunar" }
]

[open]
rules = [
    { mime = "text/*", use = "edit" },
    { mime = "image/*", use = "open" },
    { mime = "video/*", use = "open" },
    { mime = "audio/*", use = "open" },
    { mime = "application/pdf", use = "open" },
    { name = "*", use = "open" }
]